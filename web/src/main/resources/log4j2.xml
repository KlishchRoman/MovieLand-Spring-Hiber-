<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="movieland %d{yyyy-MM-dd} %-5level - %msg%n"/>
        </Console>

        <RollingFile name="LogFile" fileName="D:/Project/IdeaProjects/MovieLand/web/target/movieland.log"
                     filePattern="D:/Project/IdeaProjects/MovieLand/web/target/logs/movieland $${date:yyyy-MM-dd}/app-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="1000"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name= "com.rk.movieland.web.config" level="all">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>


</Configuration>

